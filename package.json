{
  "name": "@swgrhck/scroll-monitor",
  "version": "0.1.0",
  "description": "This is a JavaScript plugin that monitors and responds to scroll event, and supports the usage via data attributes to separate html from script.",
  "scripts": {
    "test": "npm-run-all js-dist js-test",
    "js-test": "npm-run-all --parallel js-test-karma",
    "js-test-karma": "karma start karma.conf.js",
    "js-dist": "npm-run-all js-lint js-compile",
    "js-lint": "eslint src test",
    "js-compile": "npm-run-all --parallel js-compile-*",
    "js-compile-plugins": "cross-env PLUGINS=true babel src/ --out-dir dist/ --source-maps",
    "js-compile-plugins-coverage": "cross-env PLUGINS=true NODE_ENV=test babel src/ --out-dir coverage/dist/ --source-maps"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/swgrhck/scroll-monitor.git"
  },
  "keywords": [
    "javascript",
    "scroll"
  ],
  "author": "Chakwen Hong <swgrhck@gmail.com> (https://github.com/swgrhck)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/swgrhck/scroll-monitor/issues"
  },
  "homepage": "https://github.com/swgrhck/scroll-monitor",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.2.3",
    "babel-plugin-istanbul": "^4.1.6",
    "babel-plugin-transform-es2015-modules-strip": "^0.1.1",
    "babel-preset-env": "^1.6.1",
    "cross-env": "^5.1.4",
    "eslint": "^4.19.1",
    "karma": "^2.0.2",
    "karma-chrome-launcher": "^2.2.0",
    "karma-coverage-istanbul-reporter": "^1.4.2",
    "karma-detect-browsers": "^2.3.2",
    "karma-firefox-launcher": "^1.1.0",
    "karma-mocha": "^1.3.0",
    "karma-sinon": "^1.0.5",
    "mocha": "^5.1.1",
    "npm-run-all": "^4.1.2",
    "sinon": "^5.0.3"
  },
  "browserslist": [
    "last 1 major version",
    ">= 1%",
    "Chrome >= 45",
    "Firefox >= 38",
    "Edge >= 12",
    "Explorer >= 10",
    "iOS >= 9",
    "Safari >= 9",
    "Android >= 4.4",
    "Opera >= 30"
  ]
}
